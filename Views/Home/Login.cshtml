@model OnlineGrocerySopping.Models.loginDetail

@{
    Layout = null;
    ViewBag.Title = "Login Page";
    if (ViewBag.Message != null)
    {
        <span style="text-align:center; font-size:25px;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@ViewBag.Message</span>
    }
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Consumer Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    @*<link rel="stylesheet" href="style.css">*@
    <link href="~/Content/style.css" rel="stylesheet" />
    <style type="text/css">
        .error {
            color: red;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 offset-md-4 form login-form">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    <form action="login-consumer.php" method="POST" autocomplete="">
                        <h2 class="text-center">Consumer Login</h2>
                        <p class="text-center">Use Email Address As User ID.</p>
                        <div class="form-group">
                            @Html.TextBoxFor(a => a.userName, new { @placeholder = "User ID", @class = "form-control" })
                            @Html.ValidationMessageFor(a => a.userName, "", new { @class = "error" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(a => a.password, new { @placeholder = "Password", @class = "form-control" })
                            @Html.ValidationMessageFor(a => a.password, "", new { @class = "error" })
                        </div>
                        <div class="form-group">
                            <input class="form-control button" type="submit" name="login" value="Login">
                        </div>
                        <div class="link login-link text-center">
                            Not a Consumer? @*<a href="Home/UserRegistration">Signup Here</a>*@
                            @Html.ActionLink("Register Here", "UserRegistration", "Home")
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</body>
</html>